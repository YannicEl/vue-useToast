{
  "name": "@vuetils/toast",
  "description": "Tiny toast library for Vue",
  "version": "0.2.0",
  "author": "Yannic Ellhotka <https://github.com/YannicEl>",
  "license": "MIT",
  "homepage": "https://toast.vuetils.dev/",
  "repository": {
    "type": "git",
    "url": "https://github.com/YannicEl/vue-useToast",
    "directory": "packages/lib"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "toast"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./style.css": {
      "types": "./dist/style.css",
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "build:types": "vue-tsc --emitDeclarationOnly --noEmit false",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "@vitejs/plugin-vue": "5.0.4",
    "@vuetils/toast": "workspace:*",
    "typescript": "5.4.3",
    "vite": "5.2.6",
    "vitest": "1.4.0",
    "vue": "3.4.21",
    "vue-tsc": "2.0.7"
  },
  "peerDependencies": {
    "vue": "3.x"
  }
}